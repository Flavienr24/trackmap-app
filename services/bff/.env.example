# BFF Configuration
NODE_ENV=development
PORT=3001

# TrackDoc Service
TRACKDOC_URL=http://localhost:3002
TRACKDOC_TIMEOUT=5000
TRACKDOC_API_KEY=your_secure_api_key_here_min_32_chars

# TrackmAPI Service (for future integration)
TRACKMAPI_URL=http://localhost:3000
TRACKMAPI_TIMEOUT=10000

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=false
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# API Settings
REQUEST_LIMIT=10mb
RATE_LIMIT_MAX=100

# Cache
CACHE_TTL=300
CACHE_ENABLED=true
